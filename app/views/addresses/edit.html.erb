<h1> Edit Address </h1>
<%= form_for ([current_user, @address]) do |f| %>
  <div class = "labels text-body" >
    <%= f.label :country, class: "text-white" %><br>
    <%= f.text_field :country, class: "text_field", placeholder: "Country", autofocus: true %>
  </div>
  <div class = "labels text-body" >
    <%= f.label :state, class: "text-white" %><br>
    <%= f.text_field :state, class: "text_field", placeholder: "State" %>
  </div>
  <div class = "labels text-body" >
    <%= f.label :city, class: "text-white" %><br>
    <%= f.text_field :city, class: "text_field", placeholder: "City" %>
  </div>
  <div class = "labels text-body" >
    <%= f.label :Address, class: "text-white" %><br>
    <%= f.text_field :address, class: "text_field", placeholder: "Address" %>
  </div>
  <div class = "labels text-body" >
    <%= f.label :Pincode, class: "text-white" %><br>
    <%= f.number_field :pincode, class: "text_field", placeholder: "Pincode" %>
  </div>
  <div>
    <br><%= f.submit "Add", class: "btn btn-outline-dark" %>
  </div>
<% end %>
