<h1>Sign up</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class = "labels text-body" >
    <%= f.label :name, class: "text-white" %><br>
    <%= f.text_field :name, class: "text_field", placeholder: "Name", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, class: "text-white" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-white" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "text-white" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class = "labels text-body" >
    <%= f.label :contact, class: "text-white" %><br>
    <%= f.number_field :contact, class: "text_field", placeholder: "Contact" %>
  </div>

  <div class="actions">
    <<br><%= f.submit "Sign up", class: "btn btn-outline-dark" %>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
