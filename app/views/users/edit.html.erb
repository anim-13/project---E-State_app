<h1>Edit Details </h1>
<%= form_for @user do |f| %>
  <div class = "labels text-body" >
    <%= f.label :name, class: "text-white" %><br>
    <%= f.text_field :name, class: "text_field", placeholder: "Name", autofocus: true %>
  </div>
  <div class = "labels text-body" >
    <%= f.label :contact, class: "text-white" %><br>
    <%= f.number_field :contact, class: "text_field", placeholder: "Contact" %>
  </div>
  <div>
    <br><%= f.submit "Update", class: "btn btn-outline-dark" %>
  </div>
<% end %>
